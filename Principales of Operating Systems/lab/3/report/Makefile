CC     	= gcc
EXEC   	= test_buffered
CFLAGS 	= -Wall -Werror -g 
all   	: $(EXEC)









#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables a creer -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
test_buffered	: test_buffered.o my_stdio.o
	$(CC) $(CFLAGS) -o $@ $^ 

#-----------------------------------------------------------------------------------------------------------
# ------------------------------------------ Modules geres -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
%.o 		: %.c
		$(CC) $(CFLAGS) -c -o $@ $^

#-----------------------------------------------------------------------------------------------------------
# ----------------------------------------- Methodes generales -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper
clean:
	rm -f *.o $(EXEC)
mrproper: clean
	rm -rf $(EXEC)
