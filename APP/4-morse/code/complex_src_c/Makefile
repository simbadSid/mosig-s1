CC     	= gcc
EXEC   	= morse
CFLAGS 	= -Wall -Werror -g -pthread
all   	: $(EXEC)










#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables a creer -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
morse	: morse.o dictionary.o
		$(CC) $(CFLAGS) -o $@ $^

%.o 	: %.c
		$(CC) $(CFLAGS) -c -o $@ $^

#-----------------------------------------------------------------------------------------------------------
#---------------------------------------- Methodes generales -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper
clean:
	rm -f *.o $(EXEC)
mrproper: clean
	rm -rf $(EXEC)
